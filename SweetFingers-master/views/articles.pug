extends layout

block content
    .pb-2.mt-2.mb-4.border-bottom
        h3 Create Article
    form(id='signup-form', method='POST', action="/my_articles")
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='title') Title
            .col-md-7
                input.form-control(type='text', name='title', id='title', placeholder='Title', autofocus, autocomplete='off', required)
        .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='text') Text
            .col-md-7
                input.form-control(type='text', name='text', id='text', placeholder='Text', autocomplete='off', required)
        .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='description') Description
            .col-md-7
                input.form-control(type='text', name='description', id='description', placeholder='Description', autocomplete='off', required)
        .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='title') Ingredients
            .col-md-7
                input.form-control(type='text', name='ingredients', id='ingredients', placeholder='Ingredients', autofocus, autocomplete='off', required)
        .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='description') Category
            .col-md-7
                input.form-control(type='text', name='category', id='category', placeholder='Category', autocomplete='off', required)
        .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='description') File Input
            .col-md-6
                input(type='file', name='myFile', autocomplete='off')
        .form-group.offset-sm-3.col-md-7.pl-2
            button.btn.btn-success(type='submit')
                i.fas.fa-user-plus.fa-sm
                | Create Article
